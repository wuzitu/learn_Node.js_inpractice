<div class="main_content">
    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#Module_add_dialog">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增模块
        </button>
        <button id="btn_edit" type="button" class="btn btn-sm btn-primary">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
        </button>
        <button id="btn_delete" type="button" class="btn btn-sm btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
        </button>

    </div>
    <!--警告框-->
    <div class="alert alert-danger alert-dismissible fade in hidden" id="del_alert">
      <!--<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>-->
      <p>确认删除？</p>
      <p>
        <button type="button" class="btn btn-danger">Take this action</button>
        <button type="button" class="btn btn-default">Or do this</button>
      </p>
    </div>
    <!--联系人表格-->
    <table id="contacts" class="table table-bordered"></table>

    <!-- 模态框（Modal） -->
    <form method="post" action="/addModule" class="form-horizontal" role="form" id="form_data" style="margin: 20px;">
    <div class="modal fade" id="Module_add_dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">新增模块</h4>
                </div>
                <div class="modal-body">
                    <!--模态框内容-->

                        <div class="form-group">
                            <label for="Module_d" class="col-sm-3 control-label">模块名称</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name = "Module" id="Module_d" placeholder="Module Name">
                            </div>
                        </div>

                        <div class="form-group" id="contact_d">
                            <label for="People_d" class="col-sm-3 control-label">负责人</label>
                            <!--<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">-->
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Contacts" name="People" id="People_d">
                                    <span class="input-group-btn" id="Contacts_add_d">
                                        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-plus"></span></button>
                                    </span>
                                </div><!-- /input-group -->
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Leader_d" class="col-sm-3 control-label">老大</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="Leader" id="Leader_d" placeholder="Project Leader">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Remarks_d" class="col-sm-3 control-label">备注</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="Remarks" id="Remarks_d" placeholder="Remarks">
                            </div>
                        </div>
                    

                </div>
                <div class="modal-footer">
                   
                        <button type="submit" class="btn btn-primary">提交</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                   
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
    </form>
    <!-- 模态框（Modal）end -->
</div>